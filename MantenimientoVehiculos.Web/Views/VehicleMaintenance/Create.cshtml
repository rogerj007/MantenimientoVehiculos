@model MantenimientoVehiculos.Web.Models.VehicleMaintenanceViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var maxDate = DateTime.Today.Date.AddDays(1);
   
}

<h2>Create</h2>

<h4>VehicleMaintenanceEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" asp-items="Model.ListVehicles" class="form-control"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <partial name="_VechileMaintenance" />
            <div class="form-group">
                <label asp-for="MaintenanceDate" class="control-label"></label>
                <input id="MaintenanceDate" asp-for="MaintenanceDate" type="date" asp-format="{0:dd/MM/yyyy}" max="@maxDate" class="form-control" />
                <span asp-validation-for="MaintenanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
